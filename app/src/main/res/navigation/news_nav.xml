<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/news_nav"
    app:startDestination="@id/newsFragment">

    <fragment
        android:id="@+id/newsFragment"
        android:name="com.example.newkotlindagger.fragments.MainFragment"
        android:label="fragment_news">

        <action
            android:id="@+id/action_newsFragment_to_detailFragment"
            app:destination="@id/detailFragment" />
    </fragment>

    <fragment
        android:id="@+id/detailFragment"
        android:name="com.example.newkotlindagger.fragments.DetailsFragment"
        android:label="fragment_detail"
        tools:layout="@layout/fragment_details">

        <argument
            android:name="news"
            app:argType="com.example.newkotlindagger.pojo.NewsModel" />
    </fragment>
</navigation>